{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "newProjectRoot": "projects",
    "projects": {
      "ny-components": {
        "projectType": "library",
        "root": "projects/ny-components",
        "sourceRoot": "projects/ny-components/src",
        "prefix": "lib",
        "architect": {
          "build": {
            "builder": "@angular-devkit/build-angular:ng-packagr",
            "options": {
              "project": "projects/ny-components/ng-package.json"
            },
            "configurations": {
              "production": {
                "tsConfig": "projects/ny-components/tsconfig.lib.prod.json"
              },
              "development": {
                "tsConfig": "projects/ny-components/tsconfig.lib.json"
              }
            },
            "defaultConfiguration": "production"
          },
          "test": {
            "builder": "@angular-devkit/build-angular:karma",
            "options": {
              "tsConfig": "projects/ny-components/tsconfig.spec.json",
              "polyfills": [
                "zone.js",
                "zone.js/testing"
              ]
            }
          }
        }
      }
    }
}
